<%= form_with model: [ @image_info, @image_info.comments.build ], local: true do |form| %>

  <div class="field">
    <%= form.label :commenter %>
    <%= current_user.firstname %>
  </div>


  <div class="field">
    <%= form.label :content %>
    <%= form.text_field :content, class: "form-control" %>
  </div>

<div class="actions">
    <%= form.submit %>
  </div>
<% end %>
