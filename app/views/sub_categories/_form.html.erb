
<%= form_with(model: @sub_category, local: true) do |form| %>
  <% if @sub_category.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@sub_category.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @sub_category.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :sub_category_name %>
    <%= form.text_field :sub_category_name, class: "form-control" %><br/>
  </div>

   <div class="field">
    <%= form.label :category %>
    <%= form.select :category_id, options_from_collection_for_select(Category.all, :id, :category_name), include_blank:"Select Category", :onchange => "update_subscategories_div(this.value)" %><br/>
  </div>

    
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>